# Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Database Configuration
POSTGRES_USER=slackuser
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=slackclone
DATABASE_URL=postgresql://slackuser:your-secure-postgres-password@postgres:5432/slackclone

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password-minimum-8-chars
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-secure-minio-password-minimum-8-chars

# Backend Configuration
NODE_ENV=production
PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://your-domain.com:8000
NEXT_PUBLIC_SOCKET_URL=http://your-domain.com:8000
